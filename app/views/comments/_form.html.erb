<%= simple_form_for([@dustloop, @dustloop.comments.build]) do |f| %>
    <div class="field about">
      <div class="control">
        <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    
    <div class="field about">
      <div class="control">
        <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
      </div>
    </div>
    <%= f.button :submit, 'Leave a reply', class: "btn btn-dark" %>
    <% end %>