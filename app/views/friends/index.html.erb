<% if user_signed_in? %>
<div class="mainPage">
  <div class="searchContainer">
    <form class="form-control-sm searchBar">
    <%= search_form_for @q do |f| %>
      <%= f.label :producer_or_original_source_cont %>:
      <%= f.search_field :producer_or_original_source_cont, class:'searchField', placeholder:'type in here'%>
      <%= f.submit class:'btn btn-sm btn-dark' %>
    <% end %>
    </form>
  </div>
  <br/>
  <div style="height: 500px;overflow: scroll;" class ="table-responsive-sm mainTable">
    <table class="table table-striped table-bordered table-hover table-dark">
      <thead>
        <tr class='table-row'>
          <th class='th-sm'><%= sort_link(@q, :producer) %></th>
          <th class='th-sm'><%= sort_link(@q, :original_source) %></th>
          <th class='th-sm'></th>
        </tr>
      </thead>
      <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td>
              <%= friend.producer %>
            </td>
            <td style="height:20px; overflow:hidden">
              <%= link_to friend.original_source + ' + ' + friend.current_source, friend %>
            </td>

              <td><%= button_to "Delete", friend, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class:'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to "New friend", new_friend_path, class: 'newButton btn btn-dark' %>

<% else %>
  <div class='container main'>
    <h4>[Log In to See Your Collection]</h4>
  </div>
<% end %>