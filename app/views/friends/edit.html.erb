<div class='edit'>
<h1>Editing friend</h1>

<%= render "form", friend: @friend %>

<br>
  <div class = 'text-center'>
    <%= link_to "Show this friend", @friend, class:'editButton btn btn-secondary' %>

    <%= button_to "Delete", @friend, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class:'editButton btn btn-outline-danger' %>
    
    <%= link_to "Back to friends", friends_path, class:'editButton btn btn-dark' %>
  </div>
</div>