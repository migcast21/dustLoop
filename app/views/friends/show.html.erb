<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead"><%= @friend.phone %></p>
  <hr class="my-4">
  <p><%= @friend.twitter %></p>
</div>

<%= render @friend %>

<div>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:'btn btn-secondary' %>

  <%= button_to "Delete", @friend, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class:'btn btn-outline-danger btn-sm' %>

  <%= link_to "Back to friends", friends_path, class:'btn btn-dark' %>
</div>
