<div class='edit'>
<h1 class='about'>Editing Sample</h1>

<%= render "form", dustloop: @dustloop %>

<br>
  <div class = 'text-center'>
    <%= link_to "Show this dustloop", @dustloop, class:'editButton btn btn-secondary' %>

    <%= button_to "Delete", @dustloop, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class:'editButton btn btn-outline-danger' %>
    
    <%= link_to "Back to dustloops", dustloops_path, class:'editButton btn btn-dark' %>
  </div>
</div>